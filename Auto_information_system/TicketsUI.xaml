<UserControl x:Class="Auto_information_system.TicketsUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Auto_information_system"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,10,10,102" AutoGenerateColumns="false" Name="detailsDG">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Path = id}"></DataGridTextColumn>
                <DataGridTextColumn Header="login" Binding="{Binding Path = login}"></DataGridTextColumn>
                <DataGridTextColumn Header="password" Binding="{Binding Path = password}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Редактировать" HorizontalAlignment="Left" Margin="125,353,0,0" VerticalAlignment="Top" Height="37" Width="110"/>
        <Button Content="Добавить" HorizontalAlignment="Left" Margin="10,353,0,0" VerticalAlignment="Top" Height="37" Width="110"/>
    </Grid>
</UserControl>
